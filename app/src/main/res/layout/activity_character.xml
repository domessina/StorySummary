<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="schn.beme.storysummary.mvp.diagram.DiagramActivity">>

    <include layout="@layout/toolbar"/>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_character"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_character"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include layout="@layout/fab_add_scroll"
             app:layout_anchor="@id/recycler_character"/>
    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>