<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_scene"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/AppTheme.CardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/salope"
        android:background="@color/blackTransparent"
        android:id="@+id/card_scene_picture"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:background="@color/blackTransparent"
        android:layout_alignBottom="@+id/card_scene_picture"
        >

    </View>

    <TextView
        android:id="@+id/card_scene_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="chapter id"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:maxLines="1"
        android:layout_alignBottom="@+id/card_scene_picture"

        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_scene_note"
        android:ellipsize="end"
        android:maxLines="3"
        android:layout_below="@id/card_scene_picture"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>