<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              tools:context="schn.beme.storysummary.registration.RegistrationActivity">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        />

    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/slider_indicator"
        style="@style/AndroidImageSlider_Attractive_Rect_Blue"
        android:layout_height="0dp"
        custom:selected_width="10dp"
        custom:selected_height="10dp"
        custom:unselected_width="10dp"
        custom:unselected_height="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect with Facebook"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:onClick="onClickFbButton"
        />
</LinearLayout>
