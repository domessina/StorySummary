    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
    </style>

    <!--TextView-->
    <style name="AppTheme.TextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.ImageButton" parent="android:Widget.ImageButton">
        <item name="android:tint">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/mybutton</item>
    </style>

    <style name="AppTheme.CardView" parent="CardView">
        <item name="cardElevation">5dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


